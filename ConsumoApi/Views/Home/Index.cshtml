@model IEnumerable<Producto> // Ajusta el namespace según tu modelo

@{
    ViewData["Title"] = "Inicio - Sistema de Productos";
}

<!-- Hero Section -->
<div class="hero-section bg-primary text-white py-5 mb-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8">
                <h1 class="display-4 fw-bold mb-3">Bienvenido al Sistema de Productos</h1>
                <p class="lead mb-4">Gestiona y visualiza tu inventario de productos de manera eficiente</p>
                <a href="#" class="btn btn-light btn-lg me-3">
                    <i class="fas fa-plus-circle me-2"></i>Agregar Producto
                </a>
                <a href="#" class="btn btn-outline-light btn-lg">
                    <i class="fas fa-chart-bar me-2"></i>Ver Estadísticas
                </a>
            </div>
            <div class="col-lg-4 text-center">
                <i class="fas fa-boxes fa-10x opacity-75"></i>
            </div>
        </div>
    </div>
</div>

<!-- Resumen de Inventario -->
<div class="container mb-5">
    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center">
                    <div class="text-primary mb-3">
                        <i class="fas fa-box fa-3x"></i>
                    </div>
                    <h3 class="card-title">@Model.Count()</h3>
                    <p class="card-text text-muted">Productos Totales</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center">
                    <div class="text-success mb-3">
                        <i class="fas fa-check-circle fa-3x"></i>
                    </div>
                    <h3 class="card-title">@Model.Count(p => p.Estado)</h3>
                    <p class="card-text text-muted">Productos Activos</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center">
                    <div class="text-warning mb-3">
                        <i class="fas fa-exclamation-triangle fa-3x"></i>
                    </div>
                    <h3 class="card-title">@Model.Count(p => p.Stock <= 5)</h3>
                    <p class="card-text text-muted">Stock Bajo</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Lista de Productos -->
<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="h3 mb-0">
                    <i class="fas fa-list me-2"></i>Catálogo de Productos
                </h2>
                <div>
                    <button class="btn btn-outline-primary me-2">
                        <i class="fas fa-filter me-1"></i>Filtrar
                    </button>
                    <button class="btn btn-outline-secondary">
                        <i class="fas fa-download me-1"></i>Exportar
                    </button>
                </div>
            </div>

            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover table-striped">
                        <thead class="table-dark">
                            <tr>
                                <th>Código</th>
                                <th>Nombre</th>
                                <th>Marca</th>
                                <th>Precio</th>
                                <th>Stock</th>
                                <th>Categoría</th>
                                <th>Estado</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var producto in Model)
                            {
                                <tr>
                                    <td class="fw-bold">@producto.Codigo</td>
                                    <td>@producto.Nombre</td>
                                    <td>@producto.Marca</td>
                                    <td class="text-success fw-bold">$@producto.Precio.ToString("N2")</td>
                                    <td>
                                        <span class="badge @(producto.Stock <= 5 ? "bg-warning" : "bg-success")">
                                            @producto.Stock unidades
                                        </span>
                                    </td>
                                    <td>
                                        <span class="badge bg-secondary">@producto.Categoria</span>
                                    </td>
                                    <td>
                                        <span class="badge @(producto.Estado ? "bg-success" : "bg-danger")">
                                            @(producto.Estado ? "Activo" : "Inactivo")
                                        </span>
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <button class="btn btn-outline-primary">
                                                <i class="fas fa-edit"></i>
                                            </button>
                                            <button class="btn btn-outline-info">
                                                <i class="fas fa-eye"></i>
                                            </button>
                                            <button class="btn btn-outline-danger">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-box-open fa-4x text-muted mb-3"></i>
                    <h4 class="text-muted">No hay productos registrados</h4>
                    <p class="text-muted">Comienza agregando tu primer producto al sistema</p>
                    <a href="#" class="btn btn-primary">
                        <i class="fas fa-plus-circle me-2"></i>Agregar Primer Producto
                    </a>
                </div>
            }
        </div>
    </div>
</div>

<!-- Footer Section -->
<footer class="bg-dark text-white py-4 mt-5">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h5>Sistema de Gestión de Productos</h5>
                <p class="mb-0">© 2024 - Todos los derechos reservados</p>
            </div>
            <div class="col-md-6 text-md-end">
                <p class="mb-0">
                    <i class="fas fa-envelope me-2"></i>soporte@sistemaproductos.com
                </p>
            </div>
        </div>
    </div>
</footer>

<!-- Styles adicionales -->
<style>
    .hero-section {
        background: linear-gradient(135deg, #4361ee 0%, #3a56d4 100%);
        border-radius: 0 0 2rem 2rem;
    }
    
    .card {
        transition: transform 0.2s ease-in-out;
    }
    
    .card:hover {
        transform: translateY(-5px);
    }
    
    .table th {
        border-top: none;
        font-weight: 600;
        text-transform: uppercase;
        font-size: 0.875rem;
    }
    
    .badge {
        font-size: 0.75rem;
        padding: 0.5em 0.75em;
    }
</style>

