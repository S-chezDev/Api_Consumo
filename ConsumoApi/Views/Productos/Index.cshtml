@model IEnumerable<ConsumoApi.Models.Producto>

@{
    ViewData["Title"] = "Lista de Productos";
}

<!-- Hero Section -->
<div class="hero-section bg-primary text-white py-4 mb-4">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h1 class="h2 mb-2"><i class="fas fa-boxes me-2"></i>@ViewData["Title"]</h1>
                <p class="mb-0">Gestión completa del inventario de productos</p>
            </div>
            <div class="col-md-4 text-md-end">
                <a asp-action="Create" class="btn btn-light">
                    <i class="fas fa-plus-circle me-2"></i>Crear Nuevo Producto
                </a>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <!-- Resumen de Productos -->
    <div class="row mb-4">
        <div class="col-md-3 mb-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center">
                    <div class="text-primary mb-2">
                        <i class="fas fa-box fa-2x"></i>
                    </div>
                    <h3 class="card-title h4">@Model?.Count()</h3>
                    <p class="card-text text-muted mb-0">Productos Totales</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center">
                    <div class="text-success mb-2">
                        <i class="fas fa-check-circle fa-2x"></i>
                    </div>
                    <h3 class="card-title h4">@Model?.Count(p => p.Estado)</h3>
                    <p class="card-text text-muted mb-0">Productos Activos</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center">
                    <div class="text-warning mb-2">
                        <i class="fas fa-exclamation-triangle fa-2x"></i>
                    </div>
                    <h3 class="card-title h4">@Model?.Count(p => p.Stock <= 5)</h3>
                    <p class="card-text text-muted mb-0">Stock Bajo</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center">
                    <div class="text-info mb-2">
                        <i class="fas fa-chart-line fa-2x"></i>
                    </div>
                    <h3 class="card-title h4">$@Model?.Sum(p => p.Precio * p.Stock).ToString("N2")</h3>
                    <p class="card-text text-muted mb-0">Valor Total</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Tabla de Productos -->
    <div class="card border-0 shadow-sm">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="h5 mb-0 text-dark">
                    <i class="fas fa-list me-2"></i>Catálogo Completo
                </h2>
                <div class="btn-group">
                    <button class="btn btn-outline-secondary btn-sm">
                        <i class="fas fa-filter me-1"></i>Filtrar
                    </button>
                    <button class="btn btn-outline-secondary btn-sm">
                        <i class="fas fa-download me-1"></i>Exportar
                    </button>
                </div>
            </div>

            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover table-striped">
                        <thead class="table-dark">
                            <tr>
                                <th>Código</th>
                                <th>Nombre</th>
                                <th>Marca</th>
                                <th>Precio</th>
                                <th>Stock</th>
                                <th>Categoría</th>
                                <th>Estado</th>
                                <th>Fecha Registro</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="fw-bold">@item.Codigo</td>
                                    <td>@item.Nombre</td>
                                    <td>@item.Marca</td>
                                    <td class="text-success fw-bold">$@item.Precio.ToString("N2")</td>
                                    <td>
                                        <span class="badge @(item.Stock <= 5 ? "bg-warning" : "bg-success")">
                                            @item.Stock unidades
                                        </span>
                                    </td>
                                    <td>
                                        <span class="badge bg-secondary">@item.Categoria</span>
                                    </td>
                                    <td>
                                        <span class="badge @(item.Estado ? "bg-success" : "bg-danger")">
                                            @(item.Estado ? "Activo" : "Inactivo")
                                        </span>
                                    </td>
                                    <td>@item.FechaRegistro.ToString("dd/MM/yyyy")</td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <a asp-action="Edit" asp-route-id="@item.IdProducto" class="btn btn-outline-warning">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-action="Details" asp-route-id="@item.IdProducto" class="btn btn-outline-info">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.IdProducto" class="btn btn-outline-danger">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-box-open fa-4x text-muted mb-3"></i>
                    <h4 class="text-muted">No hay productos disponibles</h4>
                    <p class="text-muted">Comienza agregando tu primer producto al sistema</p>
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="fas fa-plus-circle me-2"></i>Crear Primer Producto
                    </a>
                </div>
            }
        </div>
    </div>
</div>

<!-- Styles adicionales -->
<style>
    .hero-section {
        background: linear-gradient(135deg, #4361ee 0%, #3a56d4 100%);
        border-radius: 0.5rem;
    }

    .card {
        transition: transform 0.2s ease-in-out;
    }

        .card:hover {
            transform: translateY(-2px);
        }

    .table th {
        border-top: none;
        font-weight: 600;
        text-transform: uppercase;
        font-size: 0.8rem;
        padding: 1rem 0.75rem;
    }

    .table td {
        padding: 1rem 0.75rem;
        vertical-align: middle;
    }

    .badge {
        font-size: 0.75rem;
        padding: 0.4em 0.6em;
    }

    .btn-group-sm > .btn {
        padding: 0.25rem 0.5rem;
    }
</style>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            console.log('Lista de productos cargada correctamente');

            // Tooltip para botones de acciones
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl)
            });
        });
    </script>
}