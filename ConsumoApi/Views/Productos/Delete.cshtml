@model ConsumoApi.Models.Producto

@{
    ViewData["Title"] = "Eliminar Producto";
}

<div class="container mt-4">
    <h2 class="text-danger">¿Estás seguro que deseas eliminar este producto?</h2>
    <div class="card mt-3">
        <div class="card-body">
            <h5>@Model.Nombre</h5>
            <p><strong>Código:</strong> @Model.Codigo</p>
            <p><strong>Marca:</strong> @Model.Marca</p>
            <p><strong>Precio:</strong> @Model.Precio.ToString("C")</p>
            <p><strong>Stock:</strong> @Model.Stock</p>
            <p><strong>Categoría:</strong> @Model.Categoria</p>
        </div>
    </div>

    <form asp-action="Delete" method="post" class="mt-3">
        <input type="hidden" asp-for="IdProducto" />
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
